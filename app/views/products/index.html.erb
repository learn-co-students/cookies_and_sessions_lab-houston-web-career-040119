<h1>Your Cart</h1>
<ul>
  <% cart.each do |item| %>
    <li><%= item %></li>
  <% end %>
</ul>

<h3>Add a new item!</h3>
<p>
  <%= form_tag({controller:'products', action:'add', method:'post'}) do %>
    <input name="product" id='products'> <br>
    <input type="submit" value="Add to Cart" id='add to cart'>
  <% end %>
</p>
